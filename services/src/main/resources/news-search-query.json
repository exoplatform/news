{
  "from": "@offset@",
  "size": "@limit@",
  "query":{
    "bool": {
      "filter": [
        @metadatas_query@
        {
          "terms": {
            "permissions": [@permissions@]
          }
        }
      ],
      "should":{
        "query_string":{
          "fields": ["body", "summary", "title"],
          "query": "@term_query@"
        },
        "match_phrase": {
          "body": {
            "query": "@term@",
            "boost": 5
          }
        }
      }
    }
  },
  "highlight" : {
    "number_of_fragments" : 2,
    "fragment_size" : 150,
    "no_match_size" : 0,
    "order": "score",
    "fields" : {
      "body" : {
        "pre_tags" : ["<span class='searchMatchExcerpt'>"],
        "post_tags" : ["</span>"]
      }
    }
  }
}
