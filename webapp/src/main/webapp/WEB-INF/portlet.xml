<?xml version="1.0" encoding="UTF-8"?>
<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

    <portlet>
        <portlet-name>NewsComposer</portlet-name>
        <display-name xml:lang="EN">News Composer</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/news-activity-composer-app/index.jsp</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>News Composer</title>
            <keywords>News Composer</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>News</portlet-name>
        <display-name xml:lang="EN">News Application</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/news/news.html</value>
        </init-param>
        <expiration-cache>-1</expiration-cache>
        <cache-scope>PUBLIC</cache-scope>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>News Application</title>
            <keywords>News Application</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>NewsExtensions</portlet-name>
        <display-name xml:lang="EN">News UI Extensions</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/news-extensions/newsExtensions.html</value>
        </init-param>
        <expiration-cache>-1</expiration-cache>
        <cache-scope>PUBLIC</cache-scope>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>News UI Extensions</title>
            <keywords>News UI Extensions</keywords>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>NewsDetail</portlet-name>
        <display-name xml:lang="EN">News Details</display-name>
        <portlet-class>org.exoplatform.commons.api.portlet.GenericDispatchedViewPortlet</portlet-class>
        <init-param>
            <name>portlet-view-dispatched-file-path</name>
            <value>/news-details/index.html</value>
        </init-param>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <supported-locale>en</supported-locale>
        <portlet-info>
            <title>News Details</title>
            <keywords>News Details</keywords>
        </portlet-info>
    </portlet>

</portlet-app>